{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "module": "ESNext",
    "skipLibCheck": true,
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",
    "strict": true,
    "baseUrl": ".",
    "paths": {
      "@/backend/*": ["backend/*"],
      "@/componentes/*": ["componentes/*"],
      "@/constants/*": ["constants/*"],
      "@/database/*": ["database/*"],
      "@/features/*": ["features/*"],
      "@/flows/*": ["flows/*"],
      "@/hooks/*": ["hooks/*"],
      "@/infraestrutura/*": ["infraestrutura/*"],
      "@/mocks/*": ["ServiçosDoFrontend/ServiçoDeSimulação/*"],
      "@/Paginas/*": ["Paginas/*"],
      "@/ServiçosDoFrontend/*": ["ServiçosDoFrontend/*"],
      "@/types/*": ["types/*"],
      "@/utils/*": ["utils/*"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
